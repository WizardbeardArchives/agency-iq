<h1>Listing depts</h1>

<table>
  <thead>
    <tr>
      <th>Primarykey</th>
      <th>Dept office</th>
      <th>Dept name</th>
      <th>Dept desc</th>
      <th>Dept mgr</th>
      <th>Dept num</th>
      <th>Dept added by</th>
      <th>Dept added when</th>
      <th>Dept edited by</th>
      <th>Dept edited when</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @depts.each do |dept| %>
      <tr>
        <td><%= dept.primaryKey %></td>
        <td><%= dept.DEPT_OFFICE %></td>
        <td><%= dept.DEPT_NAME %></td>
        <td><%= dept.DEPT_DESC %></td>
        <td><%= dept.DEPT_MGR %></td>
        <td><%= dept.DEPT_NUM %></td>
        <td><%= dept.DEPT_ADDED_BY %></td>
        <td><%= dept.DEPT_ADDED_WHEN %></td>
        <td><%= dept.DEPT_EDITED_BY %></td>
        <td><%= dept.DEPT_EDITED_WHEN %></td>
        <td><%= link_to 'Show', dept %></td>
        <td><%= link_to 'Edit', edit_dept_path(dept) %></td>
        <td><%= link_to 'Destroy', dept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

