    <%= f.input :STATUS_NUM %>
    <%= f.input :STATUS_DESC %>
    <%= f.input :STATUS_ALERT %>
    <%= f.input :STATUS_STOP %>
    <%= f.input :STATUS_PROD_ALERT %>
    <%= f.input :STATUS_BILL_ALERT %>
    <%= f.input :STATUS_ALERT_BUTTON %>
