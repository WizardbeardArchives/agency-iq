    <%= f.input :STATUS_ADDED_WHEN %>
    <%= f.input :STATUS_EDITED_BY %>
    <%= f.input :STATUS_EDITED_WHEN %>
    <%= f.input :STATUS_COLOR %>
    <%= f.input :STATUS_PROD %>
